datasource db { 
  provider = "postgresql" 
  url      = env("DATABASE_URL") 
} 
 
generator client { 
  provider = "prisma-client-js" 
} 
 
model Category {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  news  NewsArticle[]
}

// Prisma schema needs to match this approach
model NewsArticle {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  category      String
  image         String?
  userWallet    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  commentsCount Int      @default(0) // Add this field

  Category      Category[]
  Comment       Comment[]
}


model Comment {
  id            Int          @id @default(autoincrement())
  newsArticleId Int
  newsArticle   NewsArticle  @relation(fields: [newsArticleId], references: [id])
  content       String
  user          String       @default("Anonymous")
  createdAt     DateTime     @default(now())
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  walletAddress String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  NewsArticle   NewsArticle[]
}
